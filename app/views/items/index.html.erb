<h1>Listing items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Link</th>
    <th>Content</th>
    <th>Store</th>
    <th>User</th>
    <th>Item category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.title %></td>
    <td><%= item.link %></td>
    <td><%= item.content %></td>
    <td><%= item.store_id %></td>
    <td><%= item.user_id %></td>
    <td><%= item.item_category_id %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

